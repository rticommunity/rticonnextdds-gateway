<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="https://community.rti.com/schema/6.0.0/rti_routing_service.xsd">

    <configuration_variables>
        <element>
            <name>AWS_IOT_CONNECTOR_ENDPOINT_URL</name>
            <value>a28hekebdxkvd3-ats.iot.us-west-2.amazonaws.com</value>
        </element>
        <element>
            <name>AWS_IOT_CONNECTOR_CLIENT_ID</name>
            <value>rti_connext_gw</value>
        </element>
        <element>
            <name>AWS_IOT_CONNECTOR_CERT</name>
            <value>rti_connext_gw.cert.pem</value>
        </element>
        <element>
            <name>AWS_IOT_CONNECTOR_PRIVATE_KEY</name>
            <value>rti_connext_gw.private.key</value>
        </element>
        <element>
            <name>AWS_IOT_CONNECTOR_ROOT_CA</name>
            <value>root-CA.crt</value>
        </element>
    </configuration_variables>

    <plugin_library name="AwsIotPluginLib">
        <processor_plugin name="IotConnector">
            <dll>rtipyprocessor</dll>
            <create_function>
                PyProcessorPlugin_create_processor_plugin
            </create_function>
            <property>
                <value>
                    <element>
                        <name>py_module_name</name>
                        <value>rti_connext_gw</value>
                    </element>
<!--                    <element>
                        <name>py_module_path</name>
                        <value>$(PWD)</value>
                    </element>-->
                    <element>
                        <name>py_create_function</name>
                        <value>create_processor</value>
                    </element>
                </value>
            </property>
        </processor_plugin>
    </plugin_library>

    <routing_service name="AwsIotGateway">

        <annotation>
            <documentation>
                Connects a DDS domain to AWS IoT Core
            </documentation>
        </annotation>

        <domain_route>

            <participant name="domain">
                <domain_id>0</domain_id>
            </participant>

            <session>
                <thread_pool>
                    <size>4</size>
                </thread_pool>

                <auto_topic_route>
                    <processor plugin_name="AwsIotPluginLib::IotConnector">
                        <property>
                            <value>
                                <element>
                                    <name>rti.aws_iot_connector.endpoint_url</name>
                                    <value>$(AWS_IOT_CONNECTOR_ENDPOINT_URL)</value>
                                </element>
                                <element>
                                    <name>rti.aws_iot_connector.client_id</name>
                                    <value>$(AWS_IOT_CONNECTOR_CLIENT_ID)</value>
                                </element>
                                <element>
                                    <name>rti.aws_iot_connector.cert</name>
                                    <value>$(AWS_IOT_CONNECTOR_CERT)</value>
                                </element>
                                <element>
                                    <name>rti.aws_iot_connector.private_key</name>
                                    <value>$(AWS_IOT_CONNECTOR_PRIVATE_KEY)</value>
                                </element>
                                <element>
                                    <name>rti.aws_iot_connector.root_ca</name>
                                    <value>$(AWS_IOT_CONNECTOR_ROOT_CA)</value>
                                </element>
                            </value>
                        </property>
                    </processor>
                    <input participant="domain">
                        <deny_topic_name_filter>rti/*</deny_topic_name_filter>
                    </input>
                </auto_topic_route>
            </session>

        </domain_route>

    </routing_service>

</dds>
